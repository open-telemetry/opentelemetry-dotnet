<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(TargetFrameworksForLibraries)</TargetFrameworks>
    <Description>OpenTracing shim for OpenTelemetry .NET</Description>
    <PackageTags>$(PackageTags);distributed-tracing;OpenTracing</PackageTags>
    <IsPackable>true</IsPackable>
    <!--
    TODO: Disable this exception, and actually do document all public API.
    -->
    <NoWarn>$(NoWarn),1591</NoWarn>

    <!-- this is temporary. will remove in future PR. -->
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <!--Do not run ApiCompat nor Package Baseline Validation as this package has never released a stable version.
  Remove this property once we have released a stable version.-->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <RunApiCompat>false</RunApiCompat>
    </PropertyGroup>
  <PropertyGroup>
    <DisablePackageBaselineValidation>true</DisablePackageBaselineValidation>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenTracing" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)\src\OpenTelemetry.Api\OpenTelemetry.Api.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)\src\Shared\Guard.cs" Link="Includes\Guard.cs" />
  </ItemGroup>

</Project>
